// Prisma Schema für Reparatur-Formular kletterschuhe.de

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// NextAuth Models
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Für Credentials Provider
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ============================================
// Order Models
// ============================================

model Order {
  id          String      @id @default(cuid())
  orderNumber Int         @unique @default(autoincrement())
  status      OrderStatus @default(DRAFT)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Rechnungsadresse
  salutation  String
  firstName   String
  lastName    String
  street      String
  houseNumber String   @default("") // NEU: Hausnummer separat
  zip         String
  city        String
  country     String   @default("DE") // NEU: Land (ISO 3166-1 alpha-2)
  phone       String
  email       String

  // Lieferadresse (optional, wenn abweichend)
  deliverySame        Boolean @default(true)
  deliverySalutation  String?
  deliveryFirstName   String?
  deliveryLastName    String?
  deliveryStreet      String?
  deliveryHouseNumber String? // NEU: Hausnummer separat
  deliveryZip         String?
  deliveryCity        String?
  deliveryCountry     String? // NEU: Land

  // Packstation/DHL (NEU: separate Felder)
  packstationNumber String? // z.B. "123"
  postNumber        String? // DHL Postnummer
  deliveryNotes     String? // Sonstige Lieferhinweise

  // Einwilligungen
  gdprAccepted Boolean
  agbAccepted  Boolean
  newsletter   Boolean @default(false)

  // Positionen
  items OrderItem[]

  // Audit Trail
  history       OrderHistory[]
  statusChanges OrderStatusChange[]

  // Berechnete Gesamtsumme (Snapshot)
  totalPrice Decimal? @db.Decimal(10, 2)
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Schuh-Details
  quantity     Decimal @default(1) @db.Decimal(3, 1) // NEU: 0.5 = Einzelschuh
  manufacturer String
  model        String
  color        String?
  size         String

  // Reparatur-Optionen
  sole              String     // z.B. "vibram_xs_grip_2", "original"
  edgeRubber        EdgeRubber // YES, NO, DISCRETION
  closure           Boolean    @default(false)
  disinfection      Boolean    @default(false) // NEU: Desinfektion (+3€)
  trustProfessionals Boolean   @default(false) // NEU: "Profis machen lassen"
  additionalWork    String?    // Zusatzarbeiten (Freitext)
  internalNotes     String?    // Interne Bemerkung

  // Preis-Snapshot (KVA)
  calculatedPrice Decimal @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  DRAFT
  SUBMITTED
  RECEIVED      // Schuhe sind eingetroffen
  INSPECTED     // Begutachtet, KVA bestätigt/angepasst
  REPAIRING     // In Reparatur
  READY         // Fertig, wartet auf Versand
  SHIPPED       // Versendet
  COMPLETED     // Abgeschlossen (Kunde hat erhalten)
  CANCELLED     // Storniert
  ON_HOLD       // Rückfrage an Kunde
}

enum EdgeRubber {
  YES
  NO
  DISCRETION
}

// ============================================
// Audit & History Models
// ============================================

// Protokolliert Änderungen an Order-Feldern
model OrderHistory {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  field     String   // Welches Feld geändert wurde
  oldValue  String?  // Alter Wert (JSON serialized)
  newValue  String?  // Neuer Wert (JSON serialized)

  changedBy String   // Admin-Email oder "SYSTEM"
  changedAt DateTime @default(now())

  @@index([orderId])
}

// Protokolliert Status-Änderungen mit Kommentar
model OrderStatusChange {
  id        String      @id @default(cuid())
  orderId   String
  order     Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)

  fromStatus OrderStatus
  toStatus   OrderStatus
  comment    String?     // Optionaler Kommentar zur Änderung

  // Für SHIPPED: Tracking-Informationen
  trackingNumber  String?
  trackingCarrier String?

  changedBy String   // Admin-Email
  changedAt DateTime @default(now())

  @@index([orderId])
}
